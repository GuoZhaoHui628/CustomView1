<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="guozhaohui.com.customview1.MainActivity">


    <guozhaohui.com.customview1.CustomTitleView
        android:id="@+id/custom1"
        android:layout_width="wrap_content"
        custom1:textTitle="9527"
        android:padding="10dp"
        android:layout_centerInParent="true"
        custom1:textTitleColor="@color/colorAccent"
        custom1:textTitleSize="40sp"
        android:layout_height="wrap_content" />


    <EditText
        android:textColor="@color/black"
        android:id="@+id/et1"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <Button

        android:id="@+id/bt1"
        android:text="提交"
        android:layout_below="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
